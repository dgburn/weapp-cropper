.movable-view .conner-block {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 30rpx;
  height: 30rpx;
  border-right: 6rpx solid #1AAD16;
  border-bottom: 6rpx solid #1AAD16;
}
.movable-view .size {
  padding: 0 2rpx;
  flex-shrink: 0;
  font-size: 20rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, .5);
}

.btns {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 32rpx;
  z-index: 1000;
}
.btns .cancel {
  color: #fff;
}
.btns .confirm {
  color: #1AAD16;
}